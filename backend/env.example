
# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (MySQL)
DB_ENGINE=django.db.backends.mysql
DB_NAME=ai_trading_engine
DB_USER=trading_user
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=3306
DATABASE_URL=mysql://trading_user:your_password@localhost:3306/ai_trading_engine

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# API Keys (optional for development)
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_SECRET_KEY=your-coinbase-secret-key
NEWS_API_KEY=your-news-api-key  # For news data collection (newsapi.org)
CRYPTOPANIC_API_KEY=your-cryptopanic-api-key  # For crypto news data collection (cryptopanic.com)
CRYPTONEWS_API_KEY=your-cryptonews-api-key  # For crypto news data collection (cryptonewsapi.com)
STOCKDATA_API_KEY=your-stockdata-api-key  # For news data collection (stockdata.org) - PREFERRED

# Trading Configuration
DEFAULT_CURRENCY=USD
RISK_PERCENTAGE=2.0
MAX_POSITION_SIZE=10.0

# AI Model Configuration
MODEL_UPDATE_FREQUENCY=3600  # seconds
SIGNAL_CONFIDENCE_THRESHOLD=0.7

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading_engine.log

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Email Verification Links (Production)
# Set USE_HTTP_IN_PRODUCTION=True if you're using HTTP instead of HTTPS in production
# Set FORCE_HTTPS_IN_EMAILS=True if you want to force HTTPS in email verification links
USE_HTTP_IN_PRODUCTION=False
FORCE_HTTPS_IN_EMAILS=False

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
