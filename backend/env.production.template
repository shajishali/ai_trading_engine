# Production Environment Variables Template
# Copy this file to .env on the production server and fill in the actual values
# DO NOT commit the actual .env file with secrets to Git

# ============================================================================
# Django Core Settings
# ============================================================================
DEBUG=False
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-KEY-IN-PRODUCTION
ALLOWED_HOSTS=YOUR_IP_ADDRESS,YOUR_DOMAIN.com
PRODUCTION_SECRET_KEY=CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-KEY-IN-PRODUCTION
PRODUCTION_ALLOWED_HOSTS=YOUR_IP_ADDRESS,YOUR_DOMAIN.com

# ============================================================================
# Database Configuration (MySQL)
# ============================================================================
DB_ENGINE=django.db.backends.mysql
DB_NAME=trading_engine_db
DB_USER=tradingengine_user
DB_PASSWORD=CHANGE-THIS-TO-STRONG-PASSWORD
DB_HOST=localhost
DB_PORT=3306
DATABASE_URL=mysql://tradingengine_user:CHANGE-THIS-TO-STRONG-PASSWORD@localhost:3306/trading_engine_db

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=2
CELERY_MAX_TASKS_PER_CHILD=1000
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3000

# ============================================================================
# AWS S3 Configuration (Optional - for static/media files)
# ============================================================================
USE_S3=False
# If USE_S3=True, uncomment and fill in:
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# ============================================================================
# API Keys for External Services (Optional)
# ============================================================================
# News API Keys
NEWS_API_KEY=
CRYPTOPANIC_API_KEY=
CRYPTONEWS_API_KEY=
STOCKDATA_API_KEY=

# Trading Exchange API Keys (Optional)
BINANCE_API_KEY=
BINANCE_SECRET_KEY=
COINBASE_API_KEY=
COINBASE_SECRET_KEY=

# ============================================================================
# Trading Configuration
# ============================================================================
DEFAULT_CURRENCY=USD
RISK_PERCENTAGE=1.0
MAX_POSITION_SIZE=5.0
SIGNAL_CONFIDENCE_THRESHOLD=0.8
MODEL_UPDATE_FREQUENCY=7200

# ============================================================================
# Email Configuration
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@ai-trading-engine.com
SERVER_EMAIL=noreply@ai-trading-engine.com

# ============================================================================
# OAuth/Social Authentication (Optional)
# ============================================================================
GOOGLE_OAUTH2_CLIENT_ID=
GOOGLE_OAUTH2_CLIENT_SECRET=

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================================
# Security & Monitoring (Optional)
# ============================================================================
SECURITY_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
IP_WHITELIST_ENABLED=False
WHITELISTED_IPS=

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/trading_engine.log

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_PATH=/home/tradingengine/backups
























